{
  "name": "testfastify",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "deploy": "npm run build -- --minify && npm run start",
    "build": "esbuild --bundle --format=esm src/index.js src/sl.js --outdir=public/js",
    "twconvert": "tailwindcss -i ./tw/source.css -o ./tw/dest.css"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.0.0",
    "@codemirror/lang-html": "^6.1.0",
    "@fastify/static": "^6.5.0",
    "@shoelace-style/shoelace": "^2.0.0-beta.81",
    "codemirror": "^6.0.1",
    "deepmerge": "^4.2.2",
    "fastify": "^4.4.0",
    "open-props": "^1.4.14"
  },
  "devDependencies": {
    "@fastify/formbody": "^7.0.1",
    "@fastify/multipart": "^7.1.0",
    "autoprefixer": "^10.4.8",
    "esbuild": "^0.15.3",
    "nodemon": "^2.0.19",
    "pino-pretty": "^9.0.0",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.8"
  },
  "nodemonConfig": {
    "ignore": [
      "public/*",
      "tw/*"
    ],
    "delay": 300
  },
  "prettier": {
    "singleQuote": false,
    "printWidth": 100,
    "semi": false
  }
}
